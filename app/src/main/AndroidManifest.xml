        <activity
            android:label="@string/app_name"
            android:name=".NewIssueWizardActionPlan" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".NewIssueWizardReasons" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".NewIssueWizardResults" >
        </activity>
        <activity
            android:label="@string/app_name"
            android:name=".newIssueScreen"
